<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <EditText
            android:padding="5pt"
            android:id="@+id/et_show_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:paddingTop="10pt"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:text="@string/zero"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/clear_ac"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_negation"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/negation"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/btn_modulus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/modulus"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/btn_divide"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:text="@string/divide"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/seven"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/eight"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/nine"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/btn_product"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:text="@string/product"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/four"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/five"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/six"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:text="@string/minus"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/one"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/two"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/btn_3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:text="@string/three"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/btn_add"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:text="@string/plus"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>

    </TableLayout>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn_0"
                android:layout_width="60pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="@string/zero"
                android:textSize="18sp"/>

        <Button
                android:layout_marginRight="1pt"
                android:id="@+id/btn_dot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:text="@string/dot"
                android:textSize="18sp"/>

        <Button
                android:id="@+id/btn_equals"
                android:layout_width="11pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:text="@string/equals"
                android:textColor="@color/white"
                android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
